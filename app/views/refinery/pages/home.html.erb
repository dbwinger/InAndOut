<%= content_for :stylesheets do %>
  <!--[if IE 7]>
	<link rel='stylesheet' id='theme-ie7-css'  href='css/ie7.css' type='text/css' media='screen' />
	<![endif]-->
	<!--[if lte IE 8]>
	<link rel='stylesheet' id='theme-lte8-css'  href='css/ie.css' type='text/css' media='screen' />
	<![endif]-->
<%end%>

	<!-- slider area -->
	<div class="slider-wrapper theme-default" id="slider">

		<!-- cycle slider -->
		<div id="slider_area" class="cycle">
    <% @page.images.each do |i| %>
			<!-- slide -->
			<div class="slide">
				<!-- slide description -->
				<div class="desc">
					<!-- slide title -->
					<span class="title"><%= i.title %></span>
					<!-- slide text -->
					<span class="text"> LOREM IPSUM DOLOR SIT AMET, CONSECTETUR ADIPISCING ELIT. SED U T CONGUE IPSUM. PHASELLUS A FELIS A <a href="#" title="">MASSA COMMODO</a> SOLLICITUDIN A SAGITTIS LOREM.</span>
				</div>
				<!-- /slide description -->

				<!-- slide background image -->
				<%= image_tag i.thumbnail("600x400").url, :alt=>"" %>

			</div>
			<!--/ slide -->
   <% end %>
		</div>
		<!-- / cycle slider -->

		<!-- slider buttons -->
		<div id="numbers"></div>
		<!-- / slider buttons -->

	</div>
	<!--/ end div #slider -->

	<div class="clear"></div>

	<!-- page contents -->
	<div class="auto_columns">
    <%= raw @page.content_for :row_1 %>
  </div>
  <div class="line"></div>
  <div class="auto_columns">
    <%= raw @page.content_for :row_2 %>
  </div>
	<div class="clear"></div>

  <!-- / page contents -->

